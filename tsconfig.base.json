{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "verbatimModuleSyntax": true,
      "moduleDetection": "force",
  
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["ES2022"],
      "paths": {
        "@vbt/*": ["./packages/*"]
      }
    },
    "include": [],
    "exclude": []
  }
  